{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "scripts/fetch_company_data.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/company-data",
      "dest": "/scripts/fetch_company_data.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "SIMFIN_API_KEY": "@simfin_api_key"
  }
}